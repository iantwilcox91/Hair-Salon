<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="../content/Styles.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
  </head>
  <body class="backgroundOrange">
<h1 class="textgreen">Stylist</h1>
<hr />
@if (@Model.Count == 0)
  {
    <p>No Stylists Added</p>
  }
else
{
  <ol>
    @foreach (var Stylist in Model)
    {
      <li><a href="/viewTheClientsForThisStylist/@Stylist.GetId()">@Stylist.GetName()</a> | <a href="/stylist/edit/@Stylist.GetId()">Edit</a> | <a href="/stylist/delete/@Stylist.GetId()">Delete</a></li>
    }
  </ol>
}
<p><a href="/addNewClientToStylist">Add a Client</a></p>
<p><a href="/deleteAllStylists">Delete all Stylists</a></p>
<p><a href="/">Home</a></p>



</body>
</html>
